<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->

    <style name="AppBaseTheme" parent="android:Theme.Material">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>

    <style name="NoActionBar" parent="android:Theme.Material.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
	
	<style name="Pink" parent="android:Theme.Material.Light">

	    <item name="android:windowBackground">@color/pinkT</item>
	    <item name="android:colorBackground">@color/purpleT</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
	</style>

